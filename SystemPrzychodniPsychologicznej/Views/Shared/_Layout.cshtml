<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <script src="https://kit.fontawesome.com/cf90110781.js" crossorigin="anonymous"></script>
    <link href='http://fonts.googleapis.com/css?family=Abhaya+Libre&subset=latin,latin-ext' rel='stylesheet' type='text/css'>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action( "Index", "Home")" class="navbar-brand">
                    Mind
                    <span>Clinic</span>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Strona główna", "Index", "Home")</li>
                    <li>@Html.ActionLink("Informacje", "About", "Home")</li>


                    @if (!User.IsInRole("Admin"))
                    {
                        <li class="active">@Html.ActionLink("Umów się", "Index", "Department")</li>
                    }

                    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Moje rezerwacje", "Reservations", "Reservation")</li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="active">@Html.ActionLink("Panel zarządzania", "Visits", "Reservation")</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    @RenderBody()

    <footer class="container-fluid text-center">
        <div class="row">
            <div class="col-sm-6">
                <h3> Kontakt </h3>

                <h5> 123-456-789 </h5>
                <h5>mindclinic@email.pl</h5>
            </div>
            <div class="col-sm-6">
                <h3> Śledź na bieżąco </h3>

                <a href="#" class="fab fa-facebook-f"> </a>
                <a href="#" class="fab fa-youtube"> </a>
                <a href="#" class="fab fa-google"> </a>
            </div>

        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
