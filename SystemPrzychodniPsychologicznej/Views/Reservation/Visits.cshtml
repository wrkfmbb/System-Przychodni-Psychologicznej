@model IEnumerable<auth.Models.Doctor>

@{
    ViewBag.Title = "Visits";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="
     ">
    <h1> @TempData["reserved"] </h1>
    <h2>Panel zarządzania wizytami z terminarzem</h2>

    <p>
        <a href="@Url.Action("Create", "Appointment")" class="btn btn-info btn-lg">
            Dodaj nowy termin wizyty
        </a>
        <a href="@Url.Action("Create", "Doctor")" class="btn btn-info btn-lg">
            Dodaj nowego lekarza
        </a>
        <a href="@Url.Action("Create", "Department")" class="btn btn-info btn-lg">
            Dodaj nowy dział
        </a>
        <a href="@Url.Action("Index", "Department")" class="btn btn-info btn-lg">
            Dodaj wizytę niezalogowanemu klientowi
        </a>

    </p>
    <div class="table-container-managment">
        <table class="table table-hover table-responsive ">
            <tr>

                <th>
                    Imię i nazwisko Specjalisty

                </th>
                <th>
                    Specjalizacja
                </th>
                <th> Akcje </th>
            </tr>

            @foreach (var item in Model)
            {

                <tr onclick="location.href = '@(Url.Action("DoctorsVisits", "Reservation", new { id = item.DoctorId }))'">


                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specialisation)
                    </td>
                    <td>
                        <p>
                            <a href="@Url.Action("DoctorsVisits", new { id = item.DoctorId })" class="btn btn-info btn-lg">
                                Terminarz
                            </a>
                            <a href="@Url.Action("Edit", "Doctor", new { id = item.DoctorId })" class="btn btn-primary btn-sm">
                                Zmień swoje dane
                            </a>
                            <a href="@Url.Action("Delete", "Doctor", new { id = item.DoctorId })" class="btn btn-primary btn-sm">
                                Usuń
                            </a>
                        </p>

                    </td>
                </tr>
            }

        </table>
    </div>
</div>